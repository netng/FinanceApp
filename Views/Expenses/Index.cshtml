@model IEnumerable<FinanceApp.Models.Expense>

<h2>My Expenses</h2>

<div class="container">
  <table class="table table-bordered">
    <thead class="table-light">
      <tr>
        <th>Description</th>
        <th>Amount</th>
        <th>Category</th>
      </tr>
    </thead>

    <tbody>
      @foreach (var expense in Model)
      {
        <tr>
          <td>@expense.Description</td>
          <td>@expense.Amount</td>
          <td>@expense.Category</td>
        </tr>
      }
    </tbody>
  </table>
</div>